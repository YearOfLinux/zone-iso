#!/usr/bin/env bash
echo "#################################"
echo "Start zone-before"
echo "#################################"

echo "Changing into our own linux.preset"
echo "#################################"
mv /etc/mkinitcpio.d/zone /etc/mkinitcpio.d/linux.preset

echo "Populate Core Team keys"
echo "#################################"
pacman-key --init
pacman-key --populate

echo "#################################"
echo "End zone-before"
echo "#################################"
rm /usr/local/bin/zone-before
